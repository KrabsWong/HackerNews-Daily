{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@cloudflare/workers-types"],
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "noEmit": true
  },
  "include": ["src/worker/**/*", "src/utils/**/*", "src/api/**/*", "src/services/**/*", "src/config/**/*"],
  "exclude": ["node_modules"]
}
